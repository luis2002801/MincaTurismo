<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fotoSitioMain"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/natural"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/nombreTuristicoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Pozo del cielo"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fotoSitioMain"/>
    <TextView
        android:id="@+id/descripcionMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/descripcion"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/nombreTuristicoMain"
        app:layout_constraintStart_toEndOf="@id/fotoSitioMain"/>

</androidx.constraintlayout.widget.ConstraintLayout>